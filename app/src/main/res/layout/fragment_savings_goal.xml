<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".SavingsGoalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your savings goal"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/radioGroupSavings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radioSafetyPillow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Safety pillow" />

            <EditText
                android:id="@+id/etSafetyPillowPercentage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Percentage of monthly income"
                android:inputType="numberDecimal"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioProduct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product" />

            <EditText
                android:id="@+id/etProductPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Product price"
                android:inputType="numberDecimal"
                android:visibility="gone" />

            <EditText
                android:id="@+id/etMonthsToSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Months to save"
                android:inputType="number"
                android:visibility="gone" />

            <RadioButton
                android:id="@+id/radioNoSavings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No savings" />

        </RadioGroup>

        <Button
            android:id="@+id/btnSavingsNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next" />

    </LinearLayout>

</ScrollView>